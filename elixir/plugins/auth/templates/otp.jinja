{% extends "base.jinja" %}
{% from "macros/forms.jinja" import render_field, render_flash %}

{% block html_class %}
  bg-foreground
{% endblock html_class %}

{% block content %}

  <section class="bg-gray-50 dark:bg-gray-900 {{ theme }}">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="flex items-center mb-6 text-4xl font-semibold text-gray-900 dark:text-white">
        <svg class="w-10 h-10 mr-3 text-primary-600 dark:text-primary-500 fill-current" viewBox="0 0 150 150">
          <use xlink:href="/static/img/icons.svg#logo"></use>
        </svg>
        Bolt
      </div>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          {{ render_flash() }}
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Two-factor authentication
          </h1>
          <div>Please enter a valid authentication or recovery code to verify your identity.</div>
          <form class="space-y-4 md:space-y-6" action="{{ url_for('auth.verify_otp') }}" method="post">
            {{ form.csrf_token }}
            <div>{{ render_field(form.auth_code) }}</div>
            {{ form.submit(class="cursor-pointer w-full text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800") }}
          </form>
        </div>
      </div>
    </div>
  </section>

{% endblock content %}
